%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%
% frame title

\setbeamertemplate{frametitle continuation}{}

\defbeamertemplate*{frametitle}{min}[1][]{
  \nointerlineskip
  \begin{beamercolorbox}[wd=\paperwidth,ht=.7cm]{frametitle}
    \begin{tikzpicture}
      \useasboundingbox (0, 0) rectangle (\the\paperwidth, .7cm);
      \ifx\insertframesubtitle\@empty{
        \node[anchor=west] at (0, .35){
          \usebeamerfont{frametitle}\insertframetitle\hspace{\paperwidth}\usebeamerfont{frametitlesep}$\rangle$
        };
      }\else{
        \node[anchor=west] at (0, .35){
          \usebeamerfont{frametitle}\insertframetitle\hspace{.25em}\usebeamerfont{frametitlesep}$\rangle$\hspace{.15em}\usebeamerfont{framesubtitle}\insertframesubtitle
        };
      }\fi
    \end{tikzpicture}
  \end{beamercolorbox}
}

